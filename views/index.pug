html
    head
        block styles
            link(rel='stylesheet' type='text/css' href='/css/style.css')
        title= title
    body
        div.content
            div#merc-select-grids
                - var mercs = [ 'Scout', 'Soldier', 'Pyro', 'Demoman', 'Heavy', 'Engineer', 'Medic', 'Sniper', 'Spy' ];
                for _ in [ 'grid1', 'grid2' ]
                    div
                        each name in mercs
                            button.merc-select= name
            div#tracking
                div#settings

                div#tracking-grid
                    for n in [...Array(9 * 9).keys()]
                        button= n
