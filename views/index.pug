html
    head
        block styles
            link(rel='stylesheet' type='text/css' href='/css/style.css')
        title= title
    body
        div.content
            div#left-panel
                div#server-info

                div#merc-select-grids
                    - var mercs = [ 'Scout', 'Soldier', 'Pyro', 'Demoman', 'Heavy', 'Engineer', 'Medic', 'Sniper', 'Spy' ];
                    for _ in [ 'BLU Grid', 'RED Grid' ]
                        div
                            each name in mercs
                                button.merc-select= name
            div#right-panel
                div#settings

                div#tracking-grid
                    for n in [...Array(10 * 10).keys()]
                        button= n
